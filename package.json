{
    "name": "vscode-translation",
    "displayName": "Translator",
    "description": "A translation tool for Visual Studio Code.",
    "publisher": "caiqichang",
    "version": "3.0.7",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "translate",
        "translation"
    ],
    "icon": "resources/logo.png",
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/caiqichang/vscode-translation"
    },
    "main": "out/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": {
            "title": "Translation",
            "properties": {
                "translation.source-language": {
                    "description": "Default source language for translation.",
                    "type": "string",
                    "default": "auto"
                },
                "translation.target-language": {
                    "description": "Default target language for translation.",
                    "type": "string",
                    "default": "en"
                },
                "translation.simple-display-mode": {
                    "description": "Specifies how to display the result of simple translation.",
                    "type": "string",
                    "enum": [
                        "notification",
                        "statusBar"
                    ],
                    "default": "notification"
                },
                "translation.max-history": {
                    "description": "Max size of history.",
                    "type": "number",
                    "default": 20
                }
            }
        },
        "commands": [
            {
                "command": "simpleTranslate",
                "title": "Simple Translate"
            },
            {
                "command": "completeTranslate",
                "title": "Complete Translate"
            },
            {
                "command": "translation",
                "title": "Translation"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "simpleTranslate",
                    "when": "false"
                },
                {
                    "command": "completeTranslate",
                    "when": "false"
                }
            ],
            "editor/context": [
                {
                    "command": "simpleTranslate",
                    "when": "editorHasSelection",
                    "group": "0_translation@0"
                },
                {
                    "command": "completeTranslate",
                    "when": "editorHasSelection",
                    "group": "0_translation@1"
                }
            ]
        },
        "keybindings": [
            {
                "command": "simpleTranslate",
                "when": "editorHasSelection",
                "key": "shift+alt+y"
            },
            {
                "command": "completeTranslate",
                "when": "editorHasSelection",
                "key": "shift+alt+t"
            },
            {
                "command": "playSourceAudio",
                "when": "editorHasSelection",
                "key": "shift+alt+p"
            }
        ]
    },
    "scripts": {
        "prepackage": "node script/pre-package.js && npm run compile",
        "package": "npx --package vsce vsce package -o build/",
        "compile": "tsc --project ./",
        "watch": "tsc --watch --project ./"
    },
    "devDependencies": {
        "@types/node": "^20.11.5",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.35",
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "vue": "^3.4.15"
    }
}